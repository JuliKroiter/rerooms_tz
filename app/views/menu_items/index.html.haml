%h2 Menu

= menu_list( @root_menu_items )

= search_form_for @q, url: root_path do |f|
  = f.search_field :name_or_state_or_parent_menu_item_name_cont,
  value: params[:q].values,
  class: 'table_search',
  placeholder: 'Search'

%table
  %tr.header
    %th Name
    %th State
    %th Parent
  - @menu_items.each do |menu_item|
    %tr
      %th
        = menu_item.name
      %th
        = menu_item.state
      %th
        = menu_item.parent_name